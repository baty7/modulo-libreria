<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="libreria_libros_form" model="ir.ui.view">
            <field name="name">libreria_libros_form</field>
            <field name="model">libros</field>
            <field name="arch" type="xml">
                <form string="Formulario de Libros">
                 <header>
                    <field name="state" widget="statusbar"/>
                </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="isbn"/>
                                <field name="author"/>
                                <field name="price"/>
                                <field name="quantity"/>
                                <field name="genre"/>
                                <!-- <field name="active"/> -->
                                <field name="description"/>
                            </group>
                            <group>

                            </group>
                        </group>
                        <notebook>
                            <page name="historial_prestamo_libros" string="Historial de prestamos">
                                <field name="historial_prestamo_libro_ids" create="0" editable="0" delete="0" >
                                    <tree>
                                    <field name="socio_id" options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="fecha_prestamo"/>
                                    <field name="fecha_devolucion"/>
                                    <field name="estado"/>
                                    </tree>
                                </field>    
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                    <!-- Falta por asignarle que solo lo pueda ver el grupo de administradores -->
                        <div class="oe_chatter">
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="libreria_libros_tree" model="ir.ui.view">
            <field name="name">libreria_libros_tree</field>
            <field name="model">libros</field>
            <field name="arch" type="xml">
                <tree string="Lista de libros">
                    <field name="name" />
                    <field name="genre"/>
                    <field name="isbn" />
                    <field name="author"/>
                    <field name="price"/>
                    <field name="quantity"/>
                    <field name="state" decoration-success="state == 'disponible'" decoration-info="state == 'prestado'" decoration-primary="state == 'vendido'" decoration-warning="state == 'no_stock'" widget="badge" optional="show" on_change="1" />
                </tree>
            </field>
        </record>

        <record id="libros_action_window" model="ir.actions.act_window">
            <field name="name">Acci√≥n de ventana para el modelo libros</field>
            <field name="res_model">libros</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id ="libreria_menu_root" name="Libreria" web_icon="libros,static/description/logo-tienda.jpeg"/>

        <menuitem id="libros_menu" name="Libros" parent="libreria_menu_root"/>

        <menuitem id="libreria_libros_submenu" name="Ver libros" action="libros_action_window" parent="libros_menu"/>

    </data>
</odoo>