<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="libreria_sale_order_from" model="ir.ui.view">
            <field name="name">libreria_sale_order_from</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

		     <xpath expr="//form" position="replace">
		         <form string="Formulario de ventas de libros">
                    <sheet>
                        <group>
                            <group>
                                <field name="is_socio"/>
                                <field name="partner_id" options="{'no_create': True, 'no_edit': True}" invisible="is_socio != True" />
                            </group>
                            <group>

                            </group>
                        </group>
                        <notebook>
                            <page name="historial_libros" string="Historial de libros">
                                <field name="line_ids" editable="bottom" nolabel="1">
                                    <tree>
                                    <field name="name"/>
                                    <field name="isbn"/>
                                    <field name="author"/>
                                    <field name="price"/>
                                    </tree>
                                </field>    
                            </page>
                        </notebook>
                    </sheet>
                </form>
		    </xpath> 
           </field>
        </record> 

    </data>
</odoo>